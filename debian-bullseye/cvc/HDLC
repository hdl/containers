set -e

makedepends=(
  cmake
  libgmp-dev
  flex
  libfl-dev
  m4
  patch
  python3-pip
  python3-pyparsing
  openjdk-11-jre-headless
)

build() {
  pip3 install tomli
  git clone https://github.com/cvc5/cvc5.git /tmp/cvc5
  cd /tmp/cvc5
  git tag -d latest
  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g;s/^v//g' > /tmp/hdlc.cvc.version
  ./configure.sh --auto-download
  cd build
  make -j$(nproc)
  make DESTDIR=/opt/cvc install
}
